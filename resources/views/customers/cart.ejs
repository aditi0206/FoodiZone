<section class="py-16 overflow-hidden cart">

    <% if(session.cart){ %>

        <div class="container w-1/2 mx-auto order">
            <div class="flex items-center pb-4 border-b border-gray-300">
                <img src="/img/cart-black.png">
                <h1 class="ml-4 text-2xl font-bold">Order Summary</h1>
            </div>
            <div class="food-list">
                <% for(let food of Object.values(session.cart.items)){ %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%=food.item.image%>">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%=food.item.name%>
                            </h1>
                            <span><%=food.item.feature%></span>
                        </div>
                        <span class="flex-1"><%=food.qty%> pcs</span>
                        <span class="text-lg font-bold">‚Çπ <%=food.item.price*food.qty%></span>

                    </div>
                    <% } %>
            </div>

            <hr>
            <div class="py-4 text-right ">
                <div>
                    <span>Total Amount</span>
                    <span class="ml-2 text-2xl font-bold amount">‚Çπ <%=session.cart.totalPrice%></span>
                </div>
                <% if(user) {%>
                    <div>
                        <form action="/orders" method="POST" class="mt-12 ">
                            <input name="phone" class="w-1/2 p-2 mb-4 border border-gray-400" type="text" placeholder="Phone number">
                            <input name="address" class="w-1/2 p-2 border border-gray-400" type="text" placeholder="Address">

                            <div>
                                <button class="px-6 py-2 mt-6 font-bold text-white rounded-full btn-primary" type="submit">Order Now</button>
                            </div>

                        </form>
                    </div>
                    <% } else {%>
                        <a href="/login" class="inline-block px-6 py-2 mt-6 font-bold text-white rounded-full cursor-pointer btn-primary ">Login To Continue</a>

                        <% } %>
            </div>

        </div>
        <% } else { %>
            <div class="py-10 empty-cart">
                <div class="container mx-auto text-center">
                    <h1 class="mb-2 text-3xl fond-bold">CART EMPTY</h1>
                    <p class="mb-10 text-lg text-gray-500">You don't have any items to purchase right now !!! üôÅ <br> To order something just proceed to main page.
                    </p>
                    <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="cart empty ">
                    <a href="/" class="inline-block px-6 py-2 mt-12 font-bold text-white rounded-full btn-primary">GO BACK</a>
                </div>
            </div>
            <% } %>
</section>