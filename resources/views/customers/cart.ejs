<section class="cart py-16 overflow-hidden">

    <% if(session.cart){ %>

        <div class=" order container mx-auto w-1/2 ">
            <div class="flex items-center border-b border-gray-300 pb-4 ">
                <img src=" /img/cart-black.png " alt=" ">
                <h1 class="font-bold ml-4 text-2xl ">Order Summary</h1>
            </div>
            <div class="food-list">
                <% for(let food of Object.values(session.cart.items)){ %>
                    <div class="flex items-center my-8 ">
                        <img class="w-24 " src=" /img/<%=food.item.image%>" alt=" ">
                        <div class="flex-1 ml-4 ">
                            <h1>
                                <%=food.item.name%>
                            </h1>
                            <span><%=food.item.feature%></span>
                        </div>
                        <span class="flex-1 "><%=food.qty%> pcs</span>
                        <span class="font-bold text-lg ">‚Çπ <%= food.item.price * food.qty %> </span>

                    </div>
                    <% } %>
            </div>

            <hr>
            <div class="text-right py-4 ">
                <div>
                    <span>Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2 ">‚Çπ<%= session.cart.totalPrice %></span>
                </div>
                <div>
                    <form action=" " class="mt-12 ">
                        <input class="border border-gray-400 p-2 w-1/2 mb-4 " type="text " placeholder="Phone number ">
                        <input class="border border-gray-400 p-2 w-1/2 " type="text " placeholder="Address ">

                        <div>
                            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 " type=" submit ">Order Now</button>
                        </div>

                    </form>
                    <div>
                        <!-- <a href=" " class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 ">Login To Continue</a> -->
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
            <div class=" empty-cart py-10 ">
                <div class="container mx-auto text-center ">
                    <h1 class="text-3xl fond-bold mb-2 ">CART EMPTY</h1>
                    <p class="text-gray-500 text-lg mb-10 ">You don't have any items to purchase right now !!! üôÅ <br> To order something just proceed to main page.
                    </p>
                    <img class="w-2/5 mx-auto " src=" /img/empty-cart.png " alt="cart empty ">
                    <a href="/ " class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 ">GO BACK</a>
                </div>
            </div>
            <% } %>
</section>